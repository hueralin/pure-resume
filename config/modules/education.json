{
  "id": "education",
  "name": "教育经历",
  "icon": "GraduationCap",
  "allowMultiple": true,
  "unique": true,
  "order": 2,
  "fields": [
    {
      "id": "school",
      "label": "学校名称",
      "type": "text",
      "required": false,
      "placeholder": "请输入学校名称"
    },
    {
      "id": "major",
      "label": "专业",
      "type": "text",
      "required": false,
      "placeholder": "请输入专业名称"
    },
    {
      "id": "degree",
      "label": "学历",
      "type": "select",
      "required": false,
      "options": ["专科", "本科", "硕士", "博士", "其他"]
    },
    {
      "id": "startDate",
      "label": "开始时间",
      "type": "date",
      "required": false,
      "placeholder": "选择开始时间"
    },
    {
      "id": "endDate",
      "label": "结束时间",
      "type": "date",
      "required": false,
      "placeholder": "选择结束时间（如在校可留空，将显示为'至今'）"
    },
    {
      "id": "description",
      "label": "描述",
      "type": "textarea",
      "required": false,
      "placeholder": "可填写主要课程、成绩、荣誉等（选填）"
    }
  ]
}

